{
  "$schema": "/etc/swaync/config.schema.json",
  "positionX": "right",
  "positionY": "top",
  "control-center-width": 340,
  "control-center-margin-top": 8,
  "control-center-margin-right": 8,
  "control-center-margin-bottom": 8,
  "notification-window-width": 300,
  "transition-length": 150,
  "timeout": 2,
  "timeout-low": 2,
  "timeout-critical": 0,

  "widgets": [
    "title",
    "dnd",
    "mpris",
    "volume",
    "backlight",
    "buttons-grid",
    "calendar",
    "notifications"
  ],
  "widget-config": {
    "calendar": {
      "show-event-dot": true,
      "show-week-numbers": false
    },
    "title": {
      "text": "Control Center",
      "clear-all-button": true,
      "button-text": "󰎟 Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "volume": {
      "label": "󰕾",
      "show-per-app": true
    },
    "backlight": {
      "label": "󰃠"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󰖩 Wi-Fi",
          "command": "nm-connection-editor"
        },
        {
          "label": "󰂯 BTooth",
          "command": "blueman-manager"
        },
        {
          "label": "󰛨 Night",
          "type": "toggle",
          "command": "bash -c '~/.config/hypr/scripts/night_light.sh'",
          "update-command": "pgrep -x wlsunset > /dev/null && echo true || echo false",
          "interval": 1
        },
        {
          "label": "󰓅 Perf",
          "type": "toggle",
          "command": "bash -c '~/.config/hypr/scripts/power_mode.sh performance'",
          "update-command": "powerprofilesctl get | grep -q performance && echo true || echo false",
          "interval": 1
        },
        {
          "label": "󰾆 Bal",
          "type": "toggle",
          "command": "bash -c '~/.config/hypr/scripts/power_mode.sh balanced'",
          "update-command": "powerprofilesctl get | grep -q balanced && echo true || echo false",
          "interval": 1
        },
        {
          "label": "󰊰 Saver",
          "type": "toggle",
          "command": "bash -c '~/.config/hypr/scripts/power_mode.sh power-saver'",
          "update-command": "powerprofilesctl get | grep -q power-saver && echo true || echo false",
          "interval": 1
        }
      ]
    }
  }
}